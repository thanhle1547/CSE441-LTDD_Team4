<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/bkg_item_rounded_rect">

    <ImageView
        android:id="@+id/iv_subject"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/ic_marker"
        tools:ignore="VectorDrawableCompat"
        android:scaleType="centerInside"
        android:background="@drawable/bkg_ic_rounded_rect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_location_label"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/tv_location_label"
        android:layout_width="wrap_content"
        android:maxWidth="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Nhãn địa điểm"
        android:textColor="@color/blue_grey_500"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_subject"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_near_me"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_subject"
        app:layout_constraintTop_toBottomOf="@+id/tv_location_label"
        app:layout_constraintVertical_bias="0.0"
        android:src="@drawable/ic_near_me"
        app:srcCompat="@drawable/ic_near_me"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:maxWidth="130dp"
        android:layout_height="wrap_content"
        android:text="Thanh Xuân"
        android:textColor="@color/cyan_300"
        android:layout_marginStart="6dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ic_near_me"
        app:layout_constraintTop_toBottomOf="@+id/tv_location_label" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/turning_on"
        android:textColor="@color/deep_purple_300"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/iv_subject"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>